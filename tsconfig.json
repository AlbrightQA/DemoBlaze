{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "types": ["mocha", "node"],
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/pages/*": ["./pages/*"],
      "@/tests/*": ["./tests/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "include": ["tests/**/*.ts", "pages/**/*.ts", "utils/**/*.ts"]
}
